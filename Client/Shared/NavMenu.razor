        @* <a href="">Louise's Shop</a> *@
        <a href="">
            <img src="images/ShoppedeLoui.png" class="logo" alt="logo" />
            <img src="images/SL.png" class="small-logo" alt="small logo" />
        </a>
    </div>

    <div class="header-center">
        <a href="">New</a>
        |
        <a href="">Women</a>
        |
        <a href="">Men</a>
        |
        <a href="">Kids</a>
